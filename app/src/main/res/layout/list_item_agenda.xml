<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/agenda_list_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/agenda_lesson_picture"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/ic_launcher_background"
        app:civ_border_color="@color/colorPrimary"
        app:civ_border_width="2dp"
        />

    <TextView
        android:id="@+id/agenda_lesson_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/agenda_lesson_picture"
        android:layout_marginStart="9dp"
        android:layout_marginLeft="9dp"
        android:layout_toEndOf="@+id/agenda_lesson_picture"
        android:layout_toRightOf="@+id/agenda_lesson_picture"
        android:text="Java Lesson - Object Oriented Programming"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/agenda_lesson_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/agenda_lesson_location"
        android:layout_alignStart="@+id/agenda_lesson_name"
        android:layout_alignLeft="@+id/agenda_lesson_name"
        android:text="Jan 7, 7pm "
        android:textSize="13sp" />

    <TextView
        android:id="@+id/agenda_lesson_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/agenda_lesson_name"
        android:layout_alignStart="@+id/agenda_lesson_name"
        android:layout_alignLeft="@+id/agenda_lesson_name"
        android:text="At ECS 2nd Floor Lab"
        android:textSize="13sp"/>


</RelativeLayout>